# =============================================================================
# SMOKEY BOT ENVIRONMENT CONFIGURATION
# =============================================================================

# =============================================================================
# DISCORD CONFIGURATION
# =============================================================================
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_TOKEN_DEV=your_dev_discord_bot_token_here
API_CLIENT_ID=your_discord_client_id
API_CLIENT_ID_DEV=your_dev_discord_client_id
INVITE_URL=https://discord.com/oauth2/authorize?client_id=YOUR_CLIENT_ID&permissions=1073743936&scope=bot%20applications.commands

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=your_database_host
DB_PORT=25060
DB_USER=your_database_username
DB_PASSWORD=your_database_password
DB_DATABASE=your_database_name

# =============================================================================
# EXTERNAL API TOKENS
# =============================================================================
SMOKEYBOT_API_TOKEN=your_smokeybot_api_token_here
API_URL=https://api.smokey.gg
TOPGG_KEY=your_topgg_api_key_here

# =============================================================================
# TWITCH INTEGRATION
# =============================================================================
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_SECRET_ID=your_twitch_client_secret

# =============================================================================
# TWITTER INTEGRATION
# =============================================================================
TWITTER_CONSUMER_KEY=your_twitter_consumer_key
TWITTER_CONSUMER_SECRET=your_twitter_consumer_secret
TWITTER_ACCESS_TOKEN_KEY=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# =============================================================================
# POKEMON GAME CONFIGURATION
# =============================================================================
SPAWN_TIME_MIN=10
SPAWN_TIME_MAX=120
SHINY_ODDS_RETAIL=4096
SHINY_ODDS_COMMUNITY=420

# =============================================================================
# SHARD MANAGEMENT
# =============================================================================
SHARD_ID=0                    # Current shard (0 = coordinator)
TOTAL_SHARDS=auto             # Total shard count (auto or number)
FORCE_SHARD_COUNT=4           # Override auto shard count
SHARD_RESPAWN=true            # Enable/disable auto-respawn
SHARD_TIMEOUT=30000           # Shard spawn timeout (ms)

# =============================================================================
# COMMUNICATION SETTINGS
# =============================================================================
USE_REDIS=false               # Enable Redis for inter-shard communication
USE_WEBSOCKET=false           # Enable WebSocket for cross-server communication
REDIS_URL=redis://localhost:6379
WS_PORT=8080
FORCE_CROSS_SERVER_COMM=false # Force cross-server communication

# =============================================================================
# PERFORMANCE & MEMORY MANAGEMENT
# =============================================================================
GLOBAL_COOLDOWN=2             # Global command cooldown (seconds)
MESSAGE_MEMORY_LIMIT=20       # Maximum messages to keep in memory
SWEEP_INTERVAL=300            # Cache sweep interval (seconds)
MESSAGE_LIFETIME=600          # Message lifetime before cleanup (seconds)

# =============================================================================
# MONITORING & HEALTH CHECKS
# =============================================================================
HEALTH_CHECK_INTERVAL=30000   # Health check interval (ms)
STATS_INTERVAL=60000          # Statistics update interval (ms)
HEARTBEAT_INTERVAL=60000      # Heartbeat interval (ms)
MAX_SHARD_RESTARTS=5          # Maximum shard restart attempts
MAX_RECONNECT_ATTEMPTS=5      # Maximum reconnection attempts

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEV=true                      # Development mode
LOG_LEVEL=debug               # Logging level (debug, info, warn, error)